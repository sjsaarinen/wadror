<h2><%= @style.name %></h2>

<p>
  <%= @style.description %>
</p>
<h3>Beers</h3>

<ul>
  <% @style.beers.each do |beer| %>
      <li>
        <%= link_to beer.name, beer %> by <%= link_to beer.brewery.name, beer.brewery %>
      </li>
  <% end %>
</ul>

<% if current_user %><%= link_to 'Edit', edit_style_path(@style), class:'btn btn-primary' %> | <% end %>
<%= link_to 'Back', styles_path, class:'btn btn-primary' %>