<h1>New Beer</h1>

<%= form_for(@beer) do |f| %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
        <%= f.label :style %><br>
        <%= f.text_field :style %>
    </div>
    <div class="field">
      <%= f.label :brewery_id %><br>
      <%= f.select :brewery_id, options_from_collection_for_select(@breweries, :id, :name) %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>

<%= link_to 'Back', beers_path %>
